{
  "name": "opscore-backend",
  "version": "0.1.0",
  "description": "Production-grade, real-time logistics backend platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/infra/db/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/infra/db/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/infra/db/data-source.ts",
    "db:init": "tsx src/scripts/init-db.ts",
    "db:fix-column": "tsx src/scripts/add-cancelled-at-column.ts",
    "db:add-approved-status": "tsx src/scripts/add-approved-status.ts",
    "db:create-notifications": "tsx src/scripts/create-notifications-table.ts",
    "db:cleanup-shipments": "tsx src/scripts/cleanup-old-shipments.ts",
    "db:reset-shipments": "tsx src/scripts/reset-shipments-to-created.ts",
    "db:update-driver-names": "tsx src/scripts/update-driver-user-names.ts",
    "db:clean-reseed": "tsx src/scripts/clean-and-reseed.ts",
    "db:verify-user": "tsx src/scripts/verify-user-data.ts",
    "seed": "tsx src/scripts/seed.ts",
    "seed:complete": "tsx src/scripts/seed-complete.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "logistics",
    "fleet-management",
    "real-time",
    "multi-tenant",
    "event-driven"
  ],
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.9.3",
    "@socket.io/redis-adapter": "^8.2.0",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "mercurius": "^13.0.0",
    "mongodb": "^6.3.0",
    "mqtt": "^5.3.0",
    "opossum": "^7.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.6.1",
    "typeorm": "^0.3.17",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/mqtt": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
