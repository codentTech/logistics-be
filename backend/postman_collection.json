{
	"info": {
		"_postman_id": "opscore-api-collection",
		"name": "OpsCore API Collection",
		"description": "Complete API collection for OpsCore Logistics Management System. Import this collection and set the baseUrl variable. All endpoints support JWT authentication via Bearer token.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{authToken}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "tenantId",
			"value": "",
			"type": "string"
		},
		{
			"key": "shipmentId",
			"value": "",
			"type": "string"
		},
		{
			"key": "driverId",
			"value": "",
			"type": "string"
		},
		{
			"key": "notificationId",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.token) {",
									"        pm.collectionVariables.set('authToken', jsonData.token);",
									"        pm.collectionVariables.set('tenantId', jsonData.user.tenantId);",
									"        console.log('✅ Login successful. Token saved.');",
									"    } else if (jsonData.requiresTenantSelection) {",
									"        console.log('⚠️ Tenant selection required:', jsonData.tenants);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@tenant1.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "auth", "login"]
						},
						"description": "Login to get JWT token. For multi-tenant users, you'll receive a tenant list and need to call this again with tenantId."
					}
				},
				{
					"name": "Login with Tenant Selection",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@tenant1.com\",\n  \"password\": \"password123\",\n  \"tenantId\": \"{{tenantId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "auth", "login"]
						},
						"description": "Login with tenant selection (for multi-tenant users). Use after receiving tenant list from initial login."
					}
				}
			]
		},
		{
			"name": "Shipments",
			"item": [
				{
					"name": "Get All Shipments",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/shipments?status=CREATED",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments"],
							"query": [
								{
									"key": "status",
									"value": "CREATED",
									"description": "Optional: Filter by status (CREATED, ASSIGNED, APPROVED, IN_TRANSIT, DELIVERED, CANCEL_BY_CUSTOMER, CANCEL_BY_DRIVER)",
									"disabled": true
								}
							]
						},
						"description": "Get all shipments for the authenticated tenant. Admin sees all shipments, Driver sees only assigned shipments. Optional status filter available."
					}
				},
				{
					"name": "Get Shipment by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}"]
						},
						"description": "Get detailed information about a specific shipment. Admin can view any shipment, Driver can only view assigned shipments."
					}
				},
				{
					"name": "Create Shipment",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('shipmentId', jsonData.data.id);",
									"    console.log('✅ Shipment created:', jsonData.data.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$randomUUID}}",
								"description": "Idempotency key for duplicate request prevention"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"pickupAddress\": \"123 Main St, New York, NY 10001\",\n  \"deliveryAddress\": \"456 Oak Ave, Brooklyn, NY 11201\",\n  \"customerName\": \"John Doe\",\n  \"customerPhone\": \"+1234567890\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/shipments",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments"]
						},
						"description": "Create a new shipment. Admin only. Idempotency-Key header ensures duplicate requests return the same response."
					}
				},
				{
					"name": "Assign Driver",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$randomUUID}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"driverId\": \"{{driverId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/assign-driver",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "assign-driver"]
						},
						"description": "Assign a driver to a shipment. Admin only. Changes status from CREATED to ASSIGNED and sets pendingApproval to true."
					}
				},
				{
					"name": "Approve Assignment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/approve",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "approve"]
						},
						"description": "Driver approves shipment assignment. Changes status from ASSIGNED to APPROVED and starts route simulation Phase 1 (TO_PICKUP). Driver only."
					}
				},
				{
					"name": "Reject Assignment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/reject",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "reject"]
						},
						"description": "Driver rejects shipment assignment. Changes status from ASSIGNED back to CREATED and removes driver assignment. Driver only."
					}
				},
				{
					"name": "Update Status - IN_TRANSIT",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$randomUUID}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"IN_TRANSIT\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/status",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "status"]
						},
						"description": "Update shipment status to IN_TRANSIT. Valid transition: APPROVED → IN_TRANSIT. Triggers route simulation Phase 2 (TO_DELIVERY). Admin or Driver."
					}
				},
				{
					"name": "Update Status - DELIVERED",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$randomUUID}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"DELIVERED\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/status",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "status"]
						},
						"description": "Update shipment status to DELIVERED. Valid transition: IN_TRANSIT → DELIVERED. Admin or Driver."
					}
				},
				{
					"name": "Cancel by Customer",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/cancel-by-customer",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "cancel-by-customer"]
						},
						"description": "Customer cancels a shipment. Changes status to CANCEL_BY_CUSTOMER. Only allowed before IN_TRANSIT. Customer only."
					}
				},
				{
					"name": "Cancel by Driver",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/cancel-by-driver",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "cancel-by-driver"]
						},
						"description": "Driver cancels a shipment. Changes status to CANCEL_BY_DRIVER. Only allowed before IN_TRANSIT. Driver only (must be assigned driver)."
					}
				},
				{
					"name": "Get Shipment Route",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/route",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "route"]
						},
						"description": "Get real-time route simulation data for a shipment. Returns route points, current position, and phase (TO_PICKUP or TO_DELIVERY). Admin or Driver."
					}
				}
			]
		},
		{
			"name": "Drivers",
			"item": [
				{
					"name": "Get All Drivers",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.length > 0) {",
									"        pm.collectionVariables.set('driverId', jsonData.data[0].id);",
									"        console.log('✅ Driver ID saved:', jsonData.data[0].id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/drivers",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "drivers"]
						},
						"description": "Get all active drivers for the authenticated tenant with their current locations. Admin or Driver."
					}
				},
				{
					"name": "Get Driver by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/drivers/{{driverId}}",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "drivers", "{{driverId}}"]
						},
						"description": "Get detailed information about a specific driver including current location. Admin or Driver (drivers can only view their own details)."
					}
				},
				{
					"name": "Update Driver Location (REST)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"latitude\": 40.7128,\n  \"longitude\": -74.0060,\n  \"timestamp\": \"{{$isoTimestamp}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/drivers/{{driverId}}/location",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "drivers", "{{driverId}}", "location"]
						},
						"description": "Update driver location via REST API. Location is stored in Redis and broadcast via Socket.IO. Admin or Driver (drivers can only update their own location). Alternative: Use MQTT topic tenant/{tenantId}/driver/{driverId}/location"
					}
				}
			]
		},
		{
			"name": "Dashboard",
			"item": [
				{
					"name": "Get Summary",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/dashboard/summary",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "dashboard", "summary"]
						},
						"description": "Get real-time operational dashboard summary. Uses CQRS read model for performance. Returns totalShipments, activeShipments, deliveredToday, driversOnline, and lastUpdated. All authenticated users."
					}
				}
			]
		},
		{
			"name": "Notifications",
			"item": [
				{
					"name": "Get Notifications",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.notifications && jsonData.data.notifications.length > 0) {",
									"        pm.collectionVariables.set('notificationId', jsonData.data.notifications[0].id);",
									"        console.log('✅ Notification ID saved:', jsonData.data.notifications[0].id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/notifications?limit=50&offset=0",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "notifications"],
							"query": [
								{
									"key": "limit",
									"value": "50",
									"description": "Number of notifications to return (default: 50, max: 100)",
									"disabled": true
								},
								{
									"key": "offset",
									"value": "0",
									"description": "Number of notifications to skip (default: 0)",
									"disabled": true
								}
							]
						},
						"description": "Get paginated list of notifications for the authenticated user. Returns notifications array and total count. Ordered by creation date (newest first). All authenticated users."
					}
				},
				{
					"name": "Get Unread Count",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/notifications/unread-count",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "notifications", "unread-count"]
						},
						"description": "Get the count of unread notifications. Useful for displaying a badge or indicator. All authenticated users."
					}
				},
				{
					"name": "Mark Notification as Read",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/notifications/{{notificationId}}/read",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "notifications", "{{notificationId}}", "read"]
						},
						"description": "Mark a specific notification as read. Returns the updated notification with status READ. All authenticated users (can only mark own notifications)."
					}
				},
				{
					"name": "Mark All Notifications as Read",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/notifications/read-all",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "notifications", "read-all"]
						},
						"description": "Mark all unread notifications for the authenticated user as read. All authenticated users."
					}
				}
			]
		},
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Health Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						},
						"description": "Check system health status (database, Redis, RabbitMQ). No authentication required."
					}
				}
			]
		}
	]
}
