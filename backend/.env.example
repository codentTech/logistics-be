# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration (PostgreSQL on Ubuntu server)
POSTGRES_HOST=163.172.43.58
POSTGRES_PORT=5432
POSTGRES_USER=opscore_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=opscore_db

# Redis Configuration (on Ubuntu server)
REDIS_HOST=163.172.43.58
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_set

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production_min_32_characters_long
JWT_EXPIRES_IN=7d

# RabbitMQ Configuration (on Ubuntu server)
RABBITMQ_URL=amqp://163.172.43.58:5672
RABBITMQ_USER=opscore_user
RABBITMQ_PASSWORD=rabbitmqpassword@123

# MQTT Configuration (on Ubuntu server, optional)
MQTT_BROKER_URL=mqtt://163.172.43.58:1883
MQTT_USERNAME=your_mqtt_username_if_set
MQTT_PASSWORD=your_mqtt_password_if_set

# Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_HOST=localhost:3000

# Database Sync (set to false in production, use migrations)
DB_SYNC=false

# Refresh Intervals (in milliseconds)
# Route simulation update interval (driver movement on map)
ROUTE_SIMULATION_INTERVAL_MS=3000

# Dashboard summary refresh interval
DASHBOARD_SUMMARY_INTERVAL_MS=3000

# Driver location share interval (how often driver sends location)
DRIVER_LOCATION_SHARE_INTERVAL_MS=3000

# Route refresh delay after status change (frontend)
ROUTE_REFRESH_DELAY_MS=1000

# Location update throttle delay (frontend)
LOCATION_UPDATE_THROTTLE_MS=5000

# Dashboard summary refresh throttle (frontend)
DASHBOARD_SUMMARY_THROTTLE_MS=2000
