{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./backend/dist",
    "rootDir": "./backend/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./backend/src",
    "types": [],
    "paths": {
      "@/*": ["./backend/src/*"],
      "@modules/*": ["./backend/src/modules/*"],
      "@shared/*": ["./backend/src/shared/*"],
      "@infrastructure/*": ["./backend/src/infra/*"],
      "@infra/*": ["./backend/src/infra/*"],
      "@domain/*": ["./backend/src/domain/*"],
      "@events/*": ["./backend/src/events/*"],
      "@api/*": ["./backend/src/api/*"]
    }
  },
  "include": ["backend/src/**/*.ts"],
  "exclude": ["node_modules", "backend/dist", "backend/src/tests", "frontend", "**/*.test.ts", "**/*.spec.ts"]
}


