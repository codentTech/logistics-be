{
	"info": {
		"_postman_id": "opscore-reference-slice",
		"name": "OpsCore Reference Backend Slice",
		"description": "Complete demo flow for OpsCore reference implementation. Import this collection and set the baseUrl variable.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{authToken}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "tenantId",
			"value": "",
			"type": "string"
		},
		{
			"key": "shipmentId",
			"value": "",
			"type": "string"
		},
		{
			"key": "driverId",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login - Ops Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('authToken', jsonData.token);",
									"    pm.collectionVariables.set('tenantId', jsonData.user.tenantId);",
									"    pm.collectionVariables.set('driverId', jsonData.user.id);",
									"    console.log('✅ Login successful. Token saved.');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@tenant1.com\",\n  \"password\": \"password123\",\n  \"tenantId\": \"{{tenantId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "auth", "login"]
						},
						"description": "Login as ops admin. After running seed script, use the tenant ID from the output."
					}
				}
			]
		},
		{
			"name": "Shipments",
			"item": [
				{
					"name": "Create Shipment",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('shipmentId', jsonData.data.id);",
									"    console.log('✅ Shipment created:', jsonData.data.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$randomUUID}}",
								"description": "Idempotency key for duplicate request prevention"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"pickupAddress\": \"123 Main St, New York, NY 10001\",\n  \"deliveryAddress\": \"456 Oak Ave, Brooklyn, NY 11201\",\n  \"customerName\": \"John Doe\",\n  \"customerPhone\": \"+1234567890\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/shipments",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments"]
						},
						"description": "Create a new shipment. Idempotency-Key header ensures duplicate requests return the same response."
					}
				},
				{
					"name": "Assign Driver",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$randomUUID}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"driverId\": \"{{driverId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/assign-driver",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "assign-driver"]
						},
						"description": "Assign a driver to a shipment. Changes status from CREATED to ASSIGNED."
					}
				},
				{
					"name": "Update Status - PICKED_UP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$randomUUID}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"PICKED_UP\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/status",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "status"]
						},
						"description": "Update shipment status to PICKED_UP. Valid transition: ASSIGNED → PICKED_UP"
					}
				},
				{
					"name": "Update Status - IN_TRANSIT",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$randomUUID}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"IN_TRANSIT\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/status",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "status"]
						},
						"description": "Update shipment status to IN_TRANSIT. Valid transition: PICKED_UP → IN_TRANSIT"
					}
				},
				{
					"name": "Update Status - DELIVERED",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Idempotency-Key",
								"value": "{{$randomUUID}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"DELIVERED\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/shipments/{{shipmentId}}/status",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "shipments", "{{shipmentId}}", "status"]
						},
						"description": "Update shipment status to DELIVERED. Valid transition: IN_TRANSIT → DELIVERED"
					}
				}
			]
		},
		{
			"name": "Drivers",
			"item": [
				{
					"name": "Update Driver Location (REST)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"latitude\": 40.7128,\n  \"longitude\": -74.0060,\n  \"timestamp\": \"{{$isoTimestamp}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/drivers/{{driverId}}/location",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "drivers", "{{driverId}}", "location"]
						},
						"description": "Update driver location via REST API. Location is stored in Redis and broadcast via Socket.IO."
					}
				}
			]
		},
		{
			"name": "Dashboard",
			"item": [
				{
					"name": "Get Summary (CQRS Read)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/dashboard/summary",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "dashboard", "summary"]
						},
						"description": "Get operational dashboard summary. Uses CQRS read model for performance."
					}
				}
			]
		},
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Health Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						},
						"description": "Check system health status (database, Redis, RabbitMQ)"
					}
				}
			]
		}
	]
}
